<% include headmain.ejs %>
<head>
  <style>
        body {
            overflow-y: hidden ! important;
            overflow-x: hidden ! important;
            background-color: #f8f8f8;
            background-image: url('background.jpeg');
            
            background-size: 100% 100%;
        }
        </style>
</head>
<body>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (users) { %>
            <% if ( ID == '1') { %>
                    <h1 class="text-center"> <%= users.firstName %> <%= users.lastName %>  </h1>
                <p class="text-center"> <br> <%= users.email %> </p>
                <p class="text-center"> <br> Points Gained : <%= users.points %></p>
                <p class="text-center"> User_Name : <%= users.username %></p>
                <span class="navbar-brand mb-0 h1" > <a class="float-right" href="/questions" title="Solve Questions">Solve Questions</a></span>
                <span class="navbar-brand mb-0 h1" > <a class="float-right" href="/questions/progress" title="View Progress">View Progress</a></span>

                <% } else { %>
                <h1 class="text-center"> <%= users.firstName %> <%= users.lastName %>  </h1>
                <p class="text-center"> <br> <%= users.email %> </p>
                <p class="text-center"> <br> Points Gained : <%= users.points %></p>
                <p class="text-center"> User_Name : <%= users.username %></p>
                <% } %>
                <a class="float-right" href="/back" title="Back">Back</a>
    <% } else { %>
        <p class="text-center">user Not Found.</p>

    <% } %>
</div>
</body>
</html>
